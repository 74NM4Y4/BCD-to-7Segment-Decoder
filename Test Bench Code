module BCD_TO_7Seg_TB;

    reg [3:0] BCD;
    wire [6:0] Out;
    
    BCD_to_7Segment uut (.BCD(BCD),.Out(Out));

    initial begin
        BCD = 0000; 
        #100;
        BCD = 0001; 
        #100;
        BCD = 0010; 
        #100;
        BCD = 0011; 
        #100;
        BCD = 0100; 
        #100;
        BCD = 0101; 
        #100;
        BCD = 0110; 
        #100;
        BCD = 0111; 
        #100;
        BCD = 1000; 
        #100;
        BCD = 1001; 
        #100;
             
    end  
endmodule
